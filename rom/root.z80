	MACRO PADTO addr ; z80asm "FORG" replacement
		; add padding + display warning
		IF $ > addr
			; no padding
			DISPLAY /L, "Warning! PADTO failed! ", $, " is more than ", addr
		ELSE
			; add padding
			BLOCK addr-$
		ENDIF
		ORG	addr
	ENDM

	INCLUDE "interpreter.z80"	; 0100 to 05FF
	INCLUDE "textrender.z80"	; 0600 to 06FF
	INCLUDE "four-shift-lookup.z80"	; 0800 to 09FF
	PADTO $0a00
	INCLUDE "generated/font.z80"	; 0a00 to 0fFF
