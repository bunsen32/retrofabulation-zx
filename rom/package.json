{
	"name": "rom",
	"version": "1.0.0",
	"type": "module",

	"devDependencies": {
		"fonts": "1.0.0",
		"zxsys": "1.0.0"
	},

	"scripts": {
		"test": "jest --config ../jest.config.ts *.test.ts",
		"genfont": "ts-node --project build/tsconfig.json build/makefont.ts generated/font.z80",
		"symtojs": "ts-node --project build/tsconfig.json build/symbolstojs.ts <generated/symbols.txt >generated/symbols.ts",
		"assemble": "sjasmplus --outprefix=dist/ --sym=generated/symbols.txt -Wno-fwdref root.z80; yarn symtojs"
	}
}